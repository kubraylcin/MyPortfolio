@model Experience
@{
    ViewData["Title"] = "UpdateExperience";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!--CreateExperience.cshtml sayfasını buraya taşıdık-->
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Deneyimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Deneyim Güncelleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<!--ID Gİ GİZLİ OLARAK ARKA PLANDA TAŞIMAK İÇİN YAPTIK-->
							<input type="hidden" asp-for="ExperienceId" />
							<label> Firma bilgisi</label>
							<input type="text" asp-for="Head" class="form-control" />
							<br />
							<label>Çalışılan Pozisyon </label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Tarih Aralığı</label>
							<input type="text" asp-for="Date" class="form-control" />
							<br />
							<label>Açıklama</label>
							<textarea rowa="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<button class="btn btn-success">Deneyimi Güncelle</button>
						</form>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>



